{
  "schedule": "0 30 1 * * ?",
  "name": "<data-stream-daily-snap-{now/d}>",
  "repository": "eu-data-repository",
  "config": {
    "indices": ["*-data-stream*"],
    "ignore_unavailable": false,
    "include_global_state": false
  },
  "retention": {
    "expire_after": "30d",
    "min_count": 5,
    "max_count": 50
  }
}

{
    "policy": {
        "phases": {
            "hot": {
                "actions": {
                    "rollover" : {
                        "max_primary_shard_size": "10GB",
                        "max_age": "1d"
                    },
                    "set_priority": {
                        "priority": 100
                    }
                }
            },
            "warm": {
                "min_age": "90d",
                "actions": {
                    "shrink" : {
                        "number_of_shards": "1"
                    },
                    "forcemerge" : {
                        "max_num_segments": "1"
                    },
                    "set_priority": {
                        "priority": 75
                    }
                }
            },
            "cold": {
                "min_age": "120d",
                "actions": {
                    "readonly" : { },
                    "set_priority": {
                        "priority": 50
                    }
                }
            },
            "delete": {
                "min_age": "457d",
                "actions": {
                    "delete": {}
                }
            }
        },
        "_meta": {
            "version": "1.0.0",
            "description": "Rollover index to retain eu data at full resolution for 30 days and shrink for remaining 15 months.",
            "author": "J.D. Power",
            "managed": false
        }
    }
}

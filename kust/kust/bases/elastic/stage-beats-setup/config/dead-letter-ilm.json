{
    "policy": {
        "phases": {
            "hot": {
                "actions": {
                    "rollover" : {
                        "max_primary_shard_size": "10GB",
                        "max_age": "1d"
                    },
                    "set_priority": {
                        "priority": 1000
                    }
                }
            },
            "warm": {
                "min_age": "1d",
                "actions": {
                    "shrink" : {
                        "number_of_shards": "1"
                    }, 
                    "forcemerge" : {
                        "max_num_segments": "1"
                    },
                    "set_priority": {
                        "priority": 100
                    }
                }
            },
            "delete": {
                "min_age": "3d",
                "actions": {
                    "delete": {}
                }
            }
        },
        "_meta": {
            "version": "1.0.0",
            "description": "Rollover index to retain application logs at full resolution for 1 days and shrink for remaining 3 days.",
            "author": "J.D. Power",
            "managed": false
        }
    }
}